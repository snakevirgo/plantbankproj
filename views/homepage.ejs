                  <div class="card-body">
                    <h2 class="card-title"><%= data.Plants[3].common_name %></h2>
                    <button id="carouselCard4" class="btn text-light btnColoring btn-lg btn-block my-2 carouselCardBtns"
                      role="button" value="<%= data.Plants[3].slug %>"
                      aria-label="View <%= data.Plants[3].common_name %> Button">View
                      <%= data.Plants[3].common_name %></button>
                  </div>
                </div>
              </div>

            </div>

            <!--Second slide-->
            <div class="carousel-item">

              <div class="carouselCards col-sm-12 col-md-12 col-lg-3"
                aria-label="<%= data.Plants[4].common_name %> Suggestion Card">
                <div class="card elementShadow mb-2">
